<h3>ルーム登録</h3>
 
 <%= form_with model: @posts do |f| %>
   <table>
     <tr>
       <th><%= f.label :room_name ,"ルーム名" %></th>
       <td><%= f.text_field :room_name %></td>
     </tr>
 
     <tr>
       <th><%= f.label :introduction ,"ルーム紹介" %></th>
       <td><%= f.text_area :introduction %></td>
     </tr>
 
     <tr>
       <th><%= f.label :price ,"料金" %></th>
       <td><%= f.number_field :price %></td>
     </tr>
 
     <tr>
       <th><%= f.label :address ,"住所" %></th>
       <td><%= f.text_area :address %></td>
     </tr>

     <tr>
       <th><%= f.label :image ,"ルーム画像" %></th>
       <td><%= f.file_field :image%></td>
     </tr>
   </table>
 
   <div>
     <ul>
       <li><%= f.submit "登録完了する"%></li>
       <li><%= link_to "ルーム情報一覧に戻る", :posts %></li>
     </ul>
   </div>
 <% end %>